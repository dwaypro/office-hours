<!DOCTYPE html>
<html>
<head>

  <title>Show Project</title>
</head>
<body>
<div class="row">
        <div class="col s12 m6">
          <div class="card teal accent-1">
            <div class="card horizontal teal accent-1 card-panel hoverable">
            <div class="card-content text-darken-2">
              <span class="card-title"><%= @project.title%></span>
          <p>
          <strong> Description: </strong>
            <%= @project.description %>
          </p>
          <%= form_tag('/sms') do |form| %>
          <%= telephone_field_tag 'tel', nil, placeholder: "xxx-xxx-xxxx" %>
          <%= text_field_tag 'message', nil, placeholder: "message" %>
          <%= hidden_field_tag 'project_id', @project.id %>
          <%= button_tag 'text'%>
          <% end %>
          <td><%= link_to "Edit", edit_project_path(@project) %> </td>
           <%= link_to 'Back' , projects_path %>
          <td><%= link_to "New_Update", new_project_update_path(@project) %> </td>
      </div>
     </div>
    </div>
  </div>

<% @project.updates.each do |update| %>
<div class="row">
        <div class="col s12 m6">
          <div class="card teal accent-1">
            <div class="card horizontal light-green lighten-5 card-panel hoverable">
            <div class="card-content text-darken-2">
              <span class="card-title"><%= update.title%></span>
              <p>
          <strong> Description: </strong>
            <%= update.description %>
          </p>
          </div>
     </div>
    </div>
  </div>
</div>
<% end %>


</body>
</html>
