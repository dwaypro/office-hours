<% if !current_user.admin? && current_user.id == @update.user_id %>

  <% if @errors && @errors.any? %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <h3>Edit: <%= @update.title %></h3>

  <%= form_for [@project, @update] do |f| %>
    <%= f.label :status %>
    <%= f.select(:status, [['In progress', 2], ['Final tests', 3], ['Pending review', 4], ['Closed', 5]]) %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'materialize-textarea' %>
    <%= f.submit "Update" %>
  <% end %>

<% else %>
  <p>Edit request failed</p>
<% end %>

<%= link_to "Back", project_path(@project) %>
