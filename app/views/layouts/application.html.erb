<!DOCTYPE html>
<html>
  <head>
    <title>OfficeHours</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%#= stylesheet_link_tag "projects" %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


 <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo left">Office Hours</a>
      <ul id="nav-mobile" class="right">
      <% if user_signed_in? && current_user.admin? %>
        <li><%= link_to "Profile", projects_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <li><%= link_to 'Create Project', new_project_path(current_user) %> <li>
        <li><%= link_to "Edit User", edit_user_registration_path %> </li>
      <% elsif user_signed_in? && current_user.admin? == false %>
        <li><%= link_to "Profile", projects_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Login", new_user_session_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>

